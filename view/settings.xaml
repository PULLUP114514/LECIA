<ci:SettingsPageBase
    x:Class="LECIA.view.settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ci="http://classisland.tech/schemas/xaml/core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LECIA.view"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="settings"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{StaticResource HarmonyOsSans}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel MaxWidth="750">
            <ci:SettingsCard
                x:Name="SETTING_COMPORT"
                Margin="0,0,0,6"
                Description="示例：COM1"
                Header="串口号"
                IconGlyph="CogOutline">
                <ci:SettingsCard.Switcher>
                    <TextBox
                        Width="150"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="COM1" />
                </ci:SettingsCard.Switcher>
            </ci:SettingsCard>

            <ci:SettingsCard
                x:Name="SETTING_BAUNDRATE"
                Margin="0,0,0,6"
                Description="推荐：115200"
                Header="串口波特率"
                IconGlyph="CogOutline">
                <ci:SettingsCard.Switcher>
                    <TextBox
                        Width="150"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="115200" />
                </ci:SettingsCard.Switcher>
            </ci:SettingsCard>

            <ci:SettingsCard
                x:Name="SETTING_DELAYTIME"
                Margin="0,0,0,6"
                Description="示例：200"
                Header="每（    ） ms发送一次数据"
                IconGlyph="CogOutline">
                <ci:SettingsCard.Switcher>
                    <TextBox
                        Width="150"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="200" />
                </ci:SettingsCard.Switcher>
            </ci:SettingsCard>

            <ci:SettingsCard
                Margin="0,0,0,6"
                Description=" {NextPointTime}               距离下个时间点的剩余时间（可能为00:00:00.0） &#x000A; {ClassLeftTime}                距离上课的时间（可能为00:00:00.0） &#x000A; {BreakingLeftTime}          距离下课的时间（可能为00:00:00.0） &#x000A; {CurrentSubjectName}    当前的课程名  （当无课程时为“无课程”） &#x000A; {CurrentClassPlan}           当前的课表    （当此处为空时显示“noclass”）"
                Header="数据格式示例"
                IconGlyph="CogOutline">
                <ci:SettingsCard.Switcher>
                    <TextBox
                        Width="0"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        IsEnabled="False"
                        Visibility="Hidden" />
                </ci:SettingsCard.Switcher>
            </ci:SettingsCard>

            <ci:SettingsCard
                x:Name="SETTING_DATAFORMAT"
                Margin="0,0,0,6"
                Description="示例见上"
                Header="数据格式"
                IconGlyph="CogOutline">
                <ci:SettingsCard.Switcher>
                    <TextBox
                        Width="600"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="" />
                </ci:SettingsCard.Switcher>
            </ci:SettingsCard>



            <ci:SettingsCard
                Name="SETTING_AUTOSTARTSW"
                Margin="0,0,0,6"
                Description=""
                Header="在启动CI时自动启动"
                IconGlyph="CogOutline" />

            <UniformGrid>
                <MenuItem
                    Name="MENU_STARTSW"
                    Click="MENU_STARTSW_Click"
                    Header="立即启动" />
                <MenuItem
                    Name="MENU_SAVE"
                    Click="MENU_SAVE_Click"
                    Header="保存设置" />
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</ci:SettingsPageBase>
